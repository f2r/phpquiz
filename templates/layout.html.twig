<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}PhPQuiz: test your PHP knowledge with quiz.{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="preconnect" href="{{ preconnect('https://platform.twitter.com') }}" />
    </head>
    <body>
        <div id="layout">
            <a href="#menu" id="menuLink" class="menu-link">
                <span></span> <!-- Hamburger icon -->
            </a>

            <div id="menu">
                <div class="pure-menu">
                    <a class="pure-menu-heading" href="{{ path('home') }}">PHP Quiz üêò</a>

                    <ul class="pure-menu-list">
                        <li class="pure-menu-item"><a href="{{ path('home') }}" class="pure-menu-link">&raquo; Home</a></li>
                        <li class="pure-menu-item"><a href="{{ path('about') }}" class="pure-menu-link">&raquo;  About</a></li>
                        {#<li class="pure-menu-item menu-item-divided pure-menu-selected">
                            <a href="#" class="pure-menu-link">Services</a>
                        </li>#}
                    </ul>
                </div>
            </div>

            <div id="main">
                {% block body %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}
            <script src="{{ preload(asset('js/ui.js'), {as: 'script'}) }}"></script>
            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
