{% extends 'layout.html.twig' %}

{% set scorePercent = (score/count*100)|round %}

{% block body %}
    <div class="header">
        <h1>Congratulations! The quiz is over!</h1>
        <h3>Your score: {{ score }}/{{ count }} - {{ scorePercent }}%</h3>
    </div>

    <div class="content">
        <ul>
            <li>Your score: <b>{{ score }}/{{ count }}</b></li>
            <li>Score percent: <b>{{ scorePercent }}%</b></li>
            <li>Total time : <b>{% include '_time_interval.html.twig' with {startDate: quiz.createdAt, endDate: (questions|last).updatedAt} %}</b></li>
        </ul>

        <table class="pure-table pure-table-bordered table-center">
            <thead>
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Correct?</th>
                <th>Time to answer</th>
                <th>Answer</th>
            </tr>
            </thead>
            <tbody>
                {% set dateRef = quiz.createdAt %}
                {% for question in questions %}
                    {% set timeToAnswer = date(question.updatedAt).diff(date(dateRef)) %}
                    {% set codeImage = absolute_url(asset('img/questions/'~question.question.codeImageFile)) %}
                    <tr>
                        <td>{{ question.rank }}</td>
                        <td>
                            <details>
                                <summary>Show code</summary>
                                <img class="pure-img" src="{{ codeImage }}" alt="PHP Quiz n¬∞{{ question.rank }}"/>
                            </details>
                        </td>
                        <td>{{ question.answer.code }} &raquo; {{ question.answer.correct ? '‚úÖ' : '‚ùå' }} </td>
                        <td>
                            {% include '_time_interval.html.twig' with {startDate: dateRef, endDate: question.updatedAt} %}
                        </td>
                        <td><a href="{{ path('question_show', {id: question.question.id}) }}">üîé View answer</a></td>
                        {% set dateRef = question.updatedAt %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p>You can also check all the correct answers with the learn mode.</p>

        <p class="center">
            <a class="pure-button pure-button-primary button-xlarge" href="{{ path('question_show', {id: 1}) }}">Learn mode ü§ì</a>
            {% if count > score %}
                <a href="{{ path('quiz_reset', {uuid: quiz.uuid}) }}" class="pure-button pure-button-primary button-xlarge">Retry ‚è©</a>
            {% endif %}
        </p>
    </div>
{% endblock %}
